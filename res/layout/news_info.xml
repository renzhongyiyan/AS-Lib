<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <RelativeLayout
        android:id="@+id/RL_coursePack_list_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/news_pic"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/head_default"
            android:scaleType="fitXY" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/LL_coursePack_content"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/LL_coursePack_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/news_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text="课程包的标题"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/news_cn"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="程包描述课程包描述"
                android:lineSpacingMultiplier="1.2"
                android:textSize="13sp"
                android:maxLines="2"/>

            <RelativeLayout
                android:id="@+id/ll_coursePack_price_and_viewCount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp">

                <LinearLayout
                    android:id="@+id/ll_coursePack_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/news_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="1000"
                        android:textSize="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coursePack_viewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/news_read_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:textSize="10dp"
                        android:text="2.2万"
                        android:textColor="@color/gray"/>

                    <ImageView
                        android:id="@+id/iv_coursePack_viewVount"
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/view_count"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
