<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray">

    <LinearLayout
        android:id="@+id/ll_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/find_course_decoration_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="课程专区"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_course_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_gray"
        android:layout_below="@id/ll_category_title"/>

    <LinearLayout
        android:id="@+id/ll_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_course_category"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/find_course_decoration_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="精选课程"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>