<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_user_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_user_image"
            android:layout_marginLeft="4dp"
            android:text="哎呀呀"
            android:textColor="@color/question_text_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_question_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="10"
            android:textColor="@color/question_price_yellow"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_question_price"
            android:src="@drawable/queston_price_icon"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_user_image"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        tools:text="如果你无法简洁的表达你的想法，那说明你还不够了解它。——阿尔伯特爱因斯坦"
        android:textColor="@color/question_text_color"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/ques_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:scaleType="centerInside"
        android:src="#dcdcdc"/>

    <RelativeLayout
        android:id="@+id/rl_question_related_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ques_image"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/rl_ques_app_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/question_type_bg">

            <TextView
                android:id="@+id/tv_ques_app_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="英语四级"
                android:textColor="@color/page_title_selected"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ques_ability_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/rl_ques_app_type"
            android:background="@drawable/question_type_bg">

            <TextView
                android:id="@+id/tv_ques_ability_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="听力"
                android:textColor="@color/page_title_selected"
                android:textSize="12sp"/>
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/ll_ques_discuss_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/rl_ques_ability_type"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_discuss_left_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_left_time"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ques_discuss_left_time"/>
                    <TextView
                        android:id="@+id/tv_left_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_left_time"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="剩1.5h"
                        android:textSize="12sp"
                        android:textColor="@color/question_text_agree_color"/>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_discuss_answered_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_answered_num"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ques_discuss_answered_num"/>
                    <TextView
                        android:id="@+id/tv_answered_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_left_time"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="8位已答"
                        android:textSize="12sp"
                        android:textColor="@color/question_text_agree_color"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_discuss_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_comment_num"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/pay_ques_comment"/>
                    <TextView
                        android:id="@+id/tv_comment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_left_time"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="90评论"
                        android:textSize="12sp"
                        android:textColor="@color/question_text_agree_color"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_discuss_agree_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_agree_num"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/pay_ques_agree"/>
                    <TextView
                        android:id="@+id/tv_agree_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_left_time"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="890点赞"
                        android:textSize="12sp"
                        android:textColor="@color/question_text_agree_color"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>