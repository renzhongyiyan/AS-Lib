<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/RL_coursePack_list_image"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/coursePack_pic"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/mobclasslist_item_image"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/coursePack_pin_pic"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/courseack_pin_pic"
            android:scaleType="fitStart" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LL_coursePack_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/LL_coursePack_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/coursePack_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/RL_courseNum"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/coursePack_courseNum"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/coursepack_num" />

                <TextView
                    android:id="@+id/tv_courseNum1"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_courseNum2"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_below="@id/tv_courseNum1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp"
                    android:text="课时"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coursePackDesc_content"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:textColor="@color/gray"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>