<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_part"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:src="@drawable/ask_ques_back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/i_wanna_ask_ques"
            android:textColor="#2c2c2c"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/title_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/submit"
            android:textColor="#2c2c2c"
            android:textSize="18sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_dividing_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_part"
        android:src="#bababa"/>

    <RelativeLayout
        android:id="@+id/rl_edit_ques_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_reward_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="悬赏金额:"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_reward"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_reward_tip"
            android:maxLines="1"
            android:numeric="signed"
            android:maxLength="5"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ebf0f5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/et_reward"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:text="爱语币"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/ques_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_part"
        android:minLines="8"
        android:maxLines="10"
        android:gravity="top"
        android:background="@null"
        android:hint="@string/ques_tip"
        android:textColor="#535353"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/rl_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ques_text"
        android:layout_above="@id/rl_edit_ques_price"
        android:layout_marginTop="25dp"
        android:background="#ebf0f5">
        <ImageView
            android:id="@+id/iv_photo_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:background="@drawable/photo_pic"/>

        <Button
            android:id="@+id/btn_add_photo"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:text="添加图片"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_photo_pic"
            android:background="@drawable/pay_question_quick_answer"/>

        <RelativeLayout
            android:id="@+id/rl_select_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="问题标签(必填)"
                android:textColor="#5a5a5a"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/ll_select_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_select_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="选择标签"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_select_tab"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/iv_select_tab"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ques_words_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ques_text"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:text="@string/ques_words_tip"
        android:textColor="#535353" />

    <com.iyuba.core.common.widget.ContextMenu
        android:id="@+id/context_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>